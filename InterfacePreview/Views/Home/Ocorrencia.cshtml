                <button type="button" class="btn btn-sm btn-danger ml-2" id="limparFiltroOcorrencia">
                    <i class="fas fa-trash"></i>
                </button>
            </div>
            <div class="form-group mr-2">
                <label for="filtroTipo">Tipo de Ocorrência:</label>
