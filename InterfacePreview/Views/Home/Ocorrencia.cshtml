                <button type="button" class="btn btn-sm btn-danger ml-2" id="limparFiltroTipo">
                    <i class="fas fa-trash"></i>
                </button>
            </div>
            <div class="form-group mr-2">
                <label for="filtroOcorreuEm">Ocorreu em:</label>
